
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%if (post.content.length > 300){%>
    <%=post.content.substring(0, 300) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    <%}else{%>
      <%=post.content%>
    <%}%>

    </p>


    <% }) %>


<%- include("partials/footer"); -%>
